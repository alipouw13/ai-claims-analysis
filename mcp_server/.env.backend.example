# Azure Service Principal (SPN) Authentication - REQUIRED
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://.openai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=chat4omini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=embedding
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_CHAT_MODEL_NAME=gpt-4o-mini

# Azure AI Search Configuration
AZURE_SEARCH_API_VERSION=2023-11-01
AZURE_SEARCH_SERVICE_NAME=
AZURE_SEARCH_INDEX_NAME=financial-documents
AZURE_SEARCH_API_KEY=

# Azure Cosmos DB Configuration
AZURE_COSMOS_ENDPOINT=https://.documents.azure.com:443/
AZURE_COSMOS_DATABASE_NAME=semantickernel
AZURE_COSMOS_CONTAINER_NAME=sessions
AZURE_COSMOS_EVALUATION_CONTAINER_NAME=evaluation
AZURE_COSMOS_TOKEN_USAGE_CONTAINER_NAME=token-usage

# Azure Document Intelligence Configuration
AZURE_FORM_RECOGNIZER_ENDPOINT=https://.cognitiveservices.azure.com/

# Azure AI Foundry Configuration
AZURE_AI_FOUNDRY_PROJECT_NAME=
AZURE_AI_FOUNDRY_RESOURCE_GROUP=
AZURE_SUBSCRIPTION_ID=
AZURE_AI_FOUNDRY_WORKSPACE_NAME=

# Azure AI Project endpoint for project-based Azure AI Foundry
AZURE_AI_PROJECT_ENDPOINT=https://.services.ai.azure.com/api/projects/<>

AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONTAINER_NAME=documents

# Azure Monitor Configuration (for observability)
AZURE_MONITOR_CONNECTION_STRING=

# Telemetry Configuration
ENABLE_TELEMETRY=false

# Azure Key Vault Configuration (optional, for secure secret management)
AZURE_KEY_VAULT_URL=

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# MCP (Model Context Protocol) Configuration
MCP_SERVER_PORT=3001
MCP_ENABLED=true
MCP_SERVER_URL=http://127.0.0.1:8001

# A2A (Agent-to-Agent) Configuration
A2A_ENABLED=true
A2A_DISCOVERY_ENDPOINT=https://your-a2a-discovery.azure.com/

# Financial Document Processing Configuration
MAX_DOCUMENT_SIZE_MB=100
SUPPORTED_DOCUMENT_TYPES=pdf,docx,xlsx,txt
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=500

# Evaluation Configuration
EVALUATION_ENABLED=true
AZURE_EVALUATION_ENDPOINT=https://.openai.azure.com/
AZURE_EVALUATION_API_KEY=
AZURE_EVALUATION_MODEL_DEPLOYMENT=chat4omini
AZURE_EVALUATION_MODEL_NAME=gpt-4o-mini

# Azure AI Foundry Configuration for Evaluation
AZURE_AI_PROJECT_CONNECTION_STRING=https://.services.ai.azure.com/;
AZURE_AI_PROJECT_NAME=
AZURE_AI_HUB_NAME=

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_TOKENS_PER_MINUTE=50000

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Development/Testing Configuration
MOCK_AZURE_SERVICES=false
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_PROFILING=false
